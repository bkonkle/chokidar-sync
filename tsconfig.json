{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "paths": {
      "^": ["styles"],
      "^/*": ["styles/*"],
      "~/*": ["components/*"],
      "@/*": ["./*"],
    }
  }
}
